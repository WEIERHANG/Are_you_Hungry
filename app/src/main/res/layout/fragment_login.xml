<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.hangandkai.areyouhungry.layBot.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/meituan">

    </com.hangandkai.areyouhungry.layBot.CircleImageView>

    <LinearLayout
        android:layout_marginLeft="@dimen/leftMargin"
        android:layout_marginRight="@dimen/rightMargin"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/userTemp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/login_user"
                android:scaleType="fitCenter"
                ></ImageView>

            <EditText
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/userTemp"
                android:id="@+id/myUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="핸드폰 번호를 입력해 주세요"
                >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pawTemp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/password"
                android:scaleType="centerCrop"
                ></ImageView>

            <EditText
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/pawTemp"
                android:id="@+id/myPassword"
                android:layout_width="match_parent"
                android:hint="인증번호를 입력해 주세요"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="90dp"
                android:id="@+id/LoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textStyle="bold"
                android:background="@drawable/btn_circle_shape1"
                ></Button>
            <Button
                android:id="@+id/RegisterBtn"
                android:layout_toRightOf="@+id/LoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/btn_circle_shape1"
                android:text="인증 번호 가져오기"></Button>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>